<% n = @id.index(params[:id]) %>
<form action="/memos/<%= @id[n] %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <div>
    タイトル
    <input type="text" name="title" value="<%= h(@title[n]) %>" >
  </div>
  <div>
    メモ
    <textarea name="text" rows="5"><%= h(@text[n]) %></textarea>
  </div>
  <button type="submit">保存</button>
</form>
